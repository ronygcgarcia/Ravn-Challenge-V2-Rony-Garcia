model User {
    id                Int     @id @default(autoincrement())
    email             String  @unique
    password          String
    last_login        String
    is_suspended      Boolean
    token_valid_after String
    verified          Boolean
}

model Role {
    id   Int    @id @default(autoincrement())
    name String
}

model Profile {
    id     Int    @id @default(autoincrement())
    nombre String
}

model ProfileRole {
    id         Int @id @default(autoincrement())
    id_profile Int
    id_role    Int
}

model UserProfile {
    id         Int @id @default(autoincrement())
    id_profile Int
    id_user    Int
}
